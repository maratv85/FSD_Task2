mixin text-field({type='text', text='', placeholder='', name='', fieldView = ''})
  
  - let fieldViewMod = ''  

  case fieldView
    when 'masked'
      - fieldViewMod = 'text-field_masked'
      - placeholder = 'ДД.ММ.ГГГГ'
  input(
    class=`text-field ${fieldViewMod}`
    type=type,  
    text=text,
    placeholder=placeholder,
    readonly=readonly,
    name=name
    
  )