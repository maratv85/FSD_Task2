mixin text-field({view='text', placeholder=''})
  
  - let ViewModifier = ''  

  case view
    when 'default'
      - ViewModifier = 'text-field_default-state'
    when 'hover/focus'
      - ViewModifier = 'text-field_hover-state'
    when 'date'
      - ViewModifier = 'text-field_date-state' 
      - placeholder  = 'ДД.ММ.ГГГГ'   

  input(
    class=`text-field ${ViewModifier}`, 
    placeholder=placeholder
  )

