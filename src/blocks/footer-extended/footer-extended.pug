include ../social-icons/social-icons.pug
include ../logo-site/logo-site.pug
include ../nav-menu/nav-menu.pug
include ../subscription-text-field/subscription-text-field.pug
include ../heading/heading.pug


mixin footer-extended({description = '', navMenus = [], subsriptionHeader = '', subcriptionText = '', emailPlaceholder = '', copyrightText = ''})
  footer.footer-extended
    .footer-extended__container
      .footer-extended__top-part

        .footer-extended__description-part
          .footer-extended__logo-wrapper
            .footer-extended__logo
              +logo-site()
          p.footer-extended__description=description 

        .footer-extended__nav-menus
          each menu in navMenus
            - const {header, links} = menu
            +nav-menu({header: header, links: links})

        .footer-extended__subscription-part 
          .footer-extended__subscribe-wrapper
            +heading({type: 'h3', text: subsriptionHeader}) 
          .footer-extended__wrapper  
            p.footer-extended__description=subcriptionText      
          .footer-extended__subscription-text-field
            +subscription-text-field({placeholder: emailPlaceholder}) 

    section.footer-extended__copyright-bar
      .footer-extended__bar-container
        .footer-extended__copyright-bar-text=copyrightText
        .footer-extended__social-icons
          +social-icons()
