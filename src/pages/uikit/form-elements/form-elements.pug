extends ../../../templates/layout.pug

block variables
  - var pageTitle = 'Form elements'

block content
  include ../../../blocks/logo-ui-kit/logo-ui-kit.pug  
  include ../../../blocks/heading/heading.pug
  include ../../../blocks/text-field/text-field.pug
  include ../../../blocks/dropdown/dropdown.pug
  include ../../../blocks/date-dropdown/date-dropdown.pug
  include ../../../blocks/air-datepicker-custom/air-datepicker-custom.pug
  include ../../../blocks/subscription-text-field/subscription-text-field.pug
  include ../../../blocks/checkbox-list/checkbox-list.pug
  include ../../../blocks/checkbox-button/checkbox-button.pug
  include ../../../blocks/room-information/room-information.pug
  include ../../../blocks/radio-button/radio-button.pug

  main.form-elements
    .form-elements__container
      .form-elements__logo
        +logo-ui-kit({}) 
      article.form-elements__fields 
        .form-elements__little-wrapper
          .form-elements__heading-text 
            +heading({
              type: 'h3',
              text: 'text field'})
            +heading({
              type: 'h3',
              text: 'default',
              weight: 'normal',
              color: 'dark-shade-50' })        
          +text-field({
            view: 'default',
            placeholder: 'Email'})
        .form-elements__little-wrapper
          .form-elements__heading-text 
            +heading({
              type: 'h3',
              text: 'text field'})
            +heading({
              type: 'h3',
              text: 'hover / focus',
              weight: 'normal',
              color: 'dark-shade-50' })        
          +text-field({
            view: 'hover/focus',
            placeholder: 'This is pretty awesome'})  
        .form-elements__little-wrapper
          .form-elements__heading-text 
            +heading({
              type: 'h3',
              text: 'dropdown'})
            +heading({
              type: 'h3',
              text: 'default',
              weight: 'normal',
              color: 'dark-shade-50' }) 
          +dropdown({
            text: 'Сколько гостей',
            hasButtons: true,
            isExpanded: false,
            options:[
              {text: 'взрослые', group: 'гости'},
              {text: 'дети', group: 'гости'},
              {text: 'младенцы'}, ],  })       
        .form-elements__wrapper
          .form-elements__heading-text 
            +heading({
              type: 'h3',
              text: 'masked text field'})
            +heading({
              type: 'h3',
              text: 'default',
              weight: 'normal',
              color: 'dark-shade-50' })        
          +text-field({
            view: 'date'})    
        .form-elements__wrapper       
          +date-dropdown({fieldType: 'range', firstHeader: 'date dropdown', secondHeader: 'date dropdown'})   
        .form-elements__wrapper       
          +date-dropdown({fieldType: 'single', firstHeader : 'filter date dropdown'}) 
        .form-elements__wrapper
          .form-elements__heading-text 
            +heading({
              type: 'h3',
              text: 'subscription text field'})
          +subscription-text-field({})  
        .form-elements__wrapper
          //- .form-elements__heading-text 
          //-   +heading({
          //-     type: 'h3',
          //-     text: 'expandable checkbox list'})
          +checkbox-list({
            values: [
              ['checkbox0', 'Завтрак'],
              ['checkbox1', 'Письменный стол'],
              ['checkbox2', 'Стул для кормления'],
              ['checkbox3', 'Кроватка'],
              ['checkbox4', 'Телевизор'],
              ['checkbox5', 'Шампунь'],
              ['checkbox6', 'Телевизор'],
              ['checkbox7', 'Шампунь']
            ]
          })
        .form-elements__big-wrapper  
          +room-information({icon: 'insert_emoticon', header: 'Комфорт', description: 'Шумопоглощающие стены'})
        .form-elements__wrapper  
          +room-information({icon: 'location_city', header: 'Удобство', description: 'Окно в каждой из спален'})  
        .form-elements__wrapper
          .form-elements__heading-text 
            +heading({
              type: 'h3',
              text: 'checkbox buttons'})
          .form-elements__checkbox    
            +checkbox-button({name: 'checkbox8', text: 'Можно курить'})
          .form-elements__checkbox    
            +checkbox-button({name: 'checkbox9', text: 'Можно с питомцами'}) 
          .form-elements__checkbox  
            +checkbox-button({name: 'checkbox10', text: 'Можно пригласить гостей (до 10 человек)'}) 
        .form-elements__wrapper
          .form-elements__heading-text 
            +heading({
              type: 'h3',
              text: 'radio buttons'})    
          .form-elements__radio-buttons
            .form-elements__radio-button
              +radio-button({value: 'man', text: 'Мужчина', isChecked: true}) 
            .form-elements__radio-button     
              +radio-button({value: 'woman', text: 'Женщина'})
          
 
