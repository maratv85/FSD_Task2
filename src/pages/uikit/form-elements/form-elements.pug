extends ../../../templates/layout.pug

block variables
  - var pageTitle = 'Form elements'

block content
  include ../../../blocks/logo-ui-kit/logo-ui-kit.pug  
  include ../../../blocks/heading/heading.pug
  include ../../../blocks/text-field/text-field.pug
  include ../../../blocks/dropdown/dropdown.pug
  include ../../../blocks/date-dropdown/date-dropdown.pug
  include ../../../blocks/air-datepicker-custom/air-datepicker-custom.pug
  include ../../../blocks/subscription-text-field/subscription-text-field.pug
  include ../../../blocks/checkbox-list/checkbox-list.pug
  include ../../../blocks/checkbox-button/checkbox-button.pug
  include ../../../blocks/room-information/room-information.pug
  include ../../../blocks/radio-button/radio-button.pug
  include ../../../blocks/toggle/toggle.pug
  include ../../../blocks/like-button/like-button.pug
  include ../../../blocks/rate-button/rate-button.pug
  include ../../../blocks/rich-checkbox-button/rich-checkbox-button.pug  
  include ../../../blocks/comment/comment.pug  
  include ../../../blocks/range-slider/range-slider.pug   
  include ../../../blocks/button/button.pug 
  include ../../../blocks/pagination/pagination.pug   
  include ../../../blocks/bullet-list/bullet-list.pug

  main.form-elements
    .form-elements__container
      .form-elements__logo
        +logo-ui-kit({}) 
      section.form-elements__fields 
        .form-elements__little-wrapper
          .form-elements__heading-text 
            +heading({
              type: 'h3',
              text: 'text field'})
            +heading({
              type: 'h3',
              text: 'default',
              weight: 'normal',
              color: 'dark-shade-50' })        
          +text-field({
            view: 'default',
            placeholder: 'Email'})
        .form-elements__little-wrapper
          .form-elements__heading-text 
            +heading({
              type: 'h3',
              text: 'text field'})
            +heading({
              type: 'h3',
              text: 'hover / focus',
              weight: 'normal',
              color: 'dark-shade-50' })        
          +text-field({
            view: 'hover/focus',
            placeholder: 'This is pretty awesome'})  
        .form-elements__little-wrapper
          .form-elements__heading-text 
            +heading({
              type: 'h3',
              text: 'dropdown'})
            +heading({
              type: 'h3',
              text: 'default',
              weight: 'normal',
              color: 'dark-shade-50' }) 
          +dropdown({
            text: 'Сколько гостей',
            hasButtons: true,
            isExpanded: false,
            options:[
              {text: 'взрослые', group: 'гости'},
              {text: 'дети', group: 'гости'},
              {text: 'младенцы'}, ],  })       
        .form-elements__wrapper
          .form-elements__heading-text 
            +heading({
              type: 'h3',
              text: 'masked text field'})
            +heading({
              type: 'h3',
              text: 'default',
              weight: 'normal',
              color: 'dark-shade-50' })        
          +text-field({
            view: 'date'})    
        .form-elements__wrapper       
          +date-dropdown({fieldType: 'range', firstHeader: 'date dropdown', secondHeader: 'date dropdown'})   
        .form-elements__wrapper       
          +date-dropdown({fieldType: 'single', firstHeader : 'filter date dropdown'}) 
        .form-elements__wrapper
          .form-elements__heading-text 
            +heading({
              type: 'h3',
              text: 'subscription text field'})
          +subscription-text-field({})  
      section.form-elements__exp-checkbox  
        .form-elements__little-wrapper
          .form-elements__heading-text 
            +heading({
              type: 'h3',
              text: 'dropdown'}) 
          +dropdown({
            hasButtons: false,
            width: 'short',
            options:[
              {text: 'спальни', number: 2},
              {text: 'кровати', number: 2},
              {text: 'ванные комнаты' } ]  })          
        .form-elements__wrapper
          +checkbox-list({
            values: [
              ['checkbox0', 'Завтрак'],
              ['checkbox1', 'Письменный стол'],
              ['checkbox2', 'Стул для кормления'],
              ['checkbox3', 'Кроватка'],
              ['checkbox4', 'Телевизор'],
              ['checkbox5', 'Шампунь'],
              ['checkbox6', 'Телевизор'],
              ['checkbox7', 'Шампунь']
            ]
          })
      section.form-elements__signs    
        .form-elements__wrapper  
          +room-information({icon: 'insert_emoticon', header: 'Комфорт', description: 'Шумопоглощающие стены'})
        .form-elements__wrapper  
          +room-information({icon: 'location_city', header: 'Удобство', description: 'Окно в каждой из спален'})  
      section.form-elements__check-buttons  
        .form-elements__wrapper
          .form-elements__heading-text-button  
            +heading({
              type: 'h3',
              text: 'checkbox buttons'})
          .form-elements__checkbox    
            +checkbox-button({name: 'checkbox8', text: 'Можно курить'})
          .form-elements__checkbox    
            +checkbox-button({name: 'checkbox9', text: 'Можно с питомцами'}) 
          .form-elements__checkbox  
            +checkbox-button({name: 'checkbox10', text: 'Можно пригласить гостей (до 10 человек)'}) 
        .form-elements__wrapper
          .form-elements__heading-text-button  
            +heading({
              type: 'h3',
              text: 'radio buttons'})    
          .form-elements__radio-buttons
            .form-elements__radio-button
              +radio-button({value: 'man', text: 'Мужчина', isChecked: true}) 
            .form-elements__radio-button     
              +radio-button({value: 'woman', text: 'Женщина'})
        .form-elements__wrapper
          .form-elements__heading-text-button 
            +heading({
              type: 'h3',
              text: 'toggle'}) 
          .form-elements__toggle-buttons
            .form-elements__toggle-button              
              +toggle({text: 'Получать спецпредложения', isChecked: true})                  
            .form-elements__toggle-button              
              +toggle({text: 'Получать спецпредложения', isChecked: false})  
        .form-elements__wrapper
          .form-elements__heading-text-button 
            +heading({
              type: 'h3',
              text: 'like button'})  
          .form-elements__like-buttons
            .form-elements__like-button                
              +like-button({likeCount: 2, isLiked: false}) 
            .form-elements__like-button                            
              +like-button({likeCount: 13, isLiked: true})       
        .form-elements__wrapper
          .form-elements__heading-text-button  
            +heading({
              type: 'h3',
              text: 'rate button'})    
          .form-elements__radio-buttons
            .form-elements__radio-button
              +rate-button({rating: 4}) 
            .form-elements__radio-button     
              +rate-button({rating: 5})  
      section.form-elements__checkbox-buttons                          
        .form-elements__wrapper
          .form-elements__heading-text-button  
            +heading({
              type: 'h3',
              text: 'rich checkbox buttons'})
          .form-elements__checkbox    
            +rich-checkbox-button({name: 'checkbox11', header: 'Широкий коридор', description: 'Ширина коридоров в номере не\u00A0менее 91 см.'})
          .form-elements__checkbox    
            +rich-checkbox-button({name: 'checkbox12', header: 'Помощник для инвалидов', description: 'На 1 этаже вас встретит специалист \u00A0 и проводит до номера.'})           
      section.form-elements__buttons  
        +range-slider({})
        .form-elements__wrapper
          .form-elements__heading-text-button 
            +heading({
              type: 'h3',
              text: 'button'})  
        .form-elements__wrapper
          +button({buttonType: 'purple-button'})
        .form-elements__wrapper
          +button({buttonType: 'pale-button'}) 
        .form-elements__wrapper
          +button({buttonType: 'text-button'})       
        .form-elements__wrapper
          +button({buttonType: 'submit-button'})   
        .form-elements__wrapper
          .form-elements__heading-text-button 
            +heading({
              type: 'h3',
              text: 'pagination'}) 
          +pagination({ 
            links: [
              {href: '/mock-address/change-me', number: 1, isActive: true},
              {href: '/mock-address/change-me', number: 2},
              {href: '/mock-address/change-me', number: 3},
              {href: '/mock-address/change-me', number: 15}
            ]
          })  
      section.form-elements__bullet-list     
        .form-elements__wrapper
          .form-elements__heading-text-button 
            +heading({
              type: 'h3',
              text: 'bullet list'}) 
          +bullet-list({
            values: [
              {text: 'Нельзя с питомцами'},
              {text: 'Без вечеринок и мероприятий'},
              {text: 'Время прибытия — после 13:00, а\u00A0выезд до 12:00'},
            ]  
          })                        
      section.form-elements__comments  
        .form-elements__wrapper
          +comment({avatarImg: './img/murad_avatar.png', likeCount: 12, isLiked: true, authorName: 'Мурад Сарафанов', daysAgo: '5 дней назад', text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.'})           