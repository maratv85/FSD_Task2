extends ../../../templates/layout.pug

block variables
  - var pageTitle = 'Colors & Type'
  
block content
  include ../../../blocks/logo-ui-kit/logo-ui-kit.pug
  include ../../../blocks/color-block/color-block.pug
  include ../../../blocks/heading/heading.pug
  .colors-and-type
    .colors-and-type__container
      .colors-and-type__logo-ui-kit
        +logo-ui-kit()
      article.colors-and-type__colors
        +color-block({text: 'Dark Shade 100%', description: '#1F2041', Color: 'dark-shade-100'})
        +color-block({ text: 'Dark Shade 75%', description: '#1F2041', Color: 'dark-shade-75' })
        +color-block({ text: 'Dark Shade 50%', description: '#1F2041', Color: 'dark-shade-50' })
        +color-block({ text: 'Dark Shade 25%', description: '#1F2041', Color: 'dark-shade-25' })
        +color-block({ text: 'Dark Shade 5%', description: '#1F2041', Color: 'dark-shade-5' })
        +color-block({ text: 'Purple', description: '#BC9CFF', Color: 'purple' })
        +color-block({ text: 'Green', description: '#6FCF97', Color: 'green' })
      article.colors-and-type__headers
        .colors-and-type__item
          .colors-and-type__h
            +heading({ type: 'h1', text: 'H1', color: 'dark-shade-25', weight: 'normal'})
          .colors-and-type__text
            +heading({ type: 'h1', text: 'This one is the sub-section or widget title' })
        .colors-and-type__item
          .colors-and-type__h
            +heading({ type: 'h2', text: 'H2', color: 'dark-shade-25', weight: 'normal'})
          .colors-and-type__text
            +heading({ type: 'h2', text: 'Next one is the item title inside widgets'})
        .colors-and-type__item
          .colors-and-type__h
            +heading({ type: 'h3', text: 'H3', color: 'dark-shade-25', weight: 'normal'})
          .colors-and-type__text
            +heading({ type: 'h3', text: 'This is a label or CTA text'})
        .colors-and-type__item
          .colors-and-type__h
            +heading({ type: 'body', text: 'Body', color: 'dark-shade-25', weight: 'normal'})
          .colors-and-type__text
            +heading({ type: 'body', text: 'This is the body text which is used for most of the design, like paragraphs, lists, etc.', weight: 'normal'})